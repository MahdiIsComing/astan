<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/backPick"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true" />

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/first_tab_avatar"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:src="@drawable/ic_menu_list"
        app:border_color="#FF000000"
        android:layout_marginTop="133dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="25dp" />

    <TextView
        android:id="@+id/first_tab_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:textSize="18sp"
        android:text=""
        android:textColor="#000"
        android:textStyle="normal"
        android:layout_below="@+id/first_tab_avatar"
        android:layout_alignRight="@+id/first_tab_avatar"
        android:layout_alignEnd="@+id/first_tab_avatar"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="45dp" />

    <TextView
        android:id="@+id/first_tab_birth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textColor="#000"
        android:layout_below="@+id/first_tab_name"
        android:textStyle="normal"/>

    <TextView
        android:id="@+id/first_tab_martyrdom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textColor="#000"
        android:layout_below="@+id/first_tab_birth"
        android:textStyle="normal"/>

    <TextView
        android:id="@+id/first_tab_mission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textColor="#000"
        android:layout_below="@+id/first_tab_martyrdom"
        android:textStyle="normal"/>

